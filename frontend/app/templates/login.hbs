<div class="background">
  <div class="form-container">
    <h2>Log in</h2>

    <form {{on "submit" this.handleLogin}} class="login-form">
      <div class="email-container">
        <label for="email">Email:</label>
        <input
          type="email"
          id="email"
          {{on "input" (fn this.updateField "email")}}
          required
        />
      </div>
      <div class="password-container">
        <label for="password">Password:</label>
        <input
          type="password"
          id="password"
          {{on "input" (fn this.updateField "password")}}
          required
        />
      </div>

      <button type="submit" class="submit-button">Log in</button>
    </form>

  </div>
  {{#if this.isLoading}}<div class="loading-container">
      <div class="spinner"></div>
      <p class="loading-message">It takes some time to login for the first time.
        Thank you for waiting.</p>
    </div>{{/if}}

  {{#if this.errorMessage}}
    <p class="error-message">{{this.errorMessage}}</p>
  {{/if}}
</div>